		<h1>Ajout d'une Commande</h1>

		        {{ form_start(form) }}
        {{ form_row(form.total) }}
        {{ form_row(form.client_id) }}

        {# Render the produits field as a checkbox #}
        {{ form_label(form.produits) }}
